<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.blogboot.mapper.DepartmentMapper">
    <select id="getDepartment"  resultType="com.chen.blogboot.entity.Department">
        select *
        from `departments`
        where department_name=#{departmentName}
    </select>
</mapper>